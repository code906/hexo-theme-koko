<!-- top-header -->
<%
var type = type;
if(type === 'app-header')
{ %>
<header class="app-header" id="header">
    <div class="navbar-header flex-row app-center bg-dark" >
        <span class="title" style="margin: 0 auto;">
            <a>
                <%- config.author %> Blog
            </a>
        </span>
    </div>
    

    <div class="navbar-collapse  bg-dark" >
        <span id="barsIcon" class="shirnk-menu" style="float:left; font-size:18.5px;">
            <a href="javascript:;" target="_self" class="header-icon waves-effect waves-circle waves-light on" id="menu-toggle">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </a>
        </span>
        <div class="flex-row app-center flex-justify-end">
            <form id="search-form" class="search-form nav-item">
                <% if(theme.local_search.enable){ %>

                    <div class="search-wrap in flex-row" id="search-wrap">  
                        <span class="search-icon search-bar ">
                            <a href="javascript:;" target="_self" id="search_search">
                                <i class="fa fa-search fa-lg" aria-hidden="true"></i>
                            </a>
                        </span>               
                        <input type="text" id="search-list-input" class="search-input search-bar" autocomplete="off" >
                        <div id="search-list" class="dropdown-menu"> 
                            <div id="search-list-Msg" class="search-meta"></div>
                            <ul id="search-list-result" class="search-result">
                                
                            </ul> 
                        </div>
                        <span class="search-icon search-bar search-icon-toggle">
                            <a href="javascript:;" target="_self" id="search_close">
                                <i class="fa fa-times fa-lg" aria-hidden="true"></i>
                            </a>
                            <a href="javascript:;" target="_self" id="search_expand">
                                <i class="fa fa-expand fa-lg" aria-hidden="true"></i>
                            </a>
                        </span>
 
                        
                    </div>
                <% }%>
            </form>


            <% if(theme.share){ %>
                <div class="nav-item">
                    <a href="javascript:;" target="_self" class="" id="menuShare">
                        <i class="fa fa-share-alt fa-lg" aria-hidden="true"></i>
                    </a>
                    
                    <%- partial('../post/share', {scope: 'global'}) %>
                    
                </div>
            <% } %>
            <% if(config.feed && config.feed.path){ %>
                <div class="nav-item">
                    <a href="<%- (config.feed.path) %>" target="_blank" class="" id="menuFeed">
                        <i class="fa fa-feed fa-lg" aria-hidden="true"></i>
                    </a>
                </div>
            <% } %>
        </div>
        
    </div>
</header>
<% } %>


<%
if(type === 'content-header')
{ 
    var hdClass = hdClass ? hdClass : "";
%>
<header class="content-header" id="<%- hdClass %>">

    <div  id="pjax-container" class="container">
        <h1 class="title"><%=title %></h1>
        <h5 class="subtitle">
            <% if(is_post()){ %>
                <%- partial('post/head-meta') %>
            <% } else if(is_home()){ %>
                <%- config.subtitle %>
            <% } else if (page.layout === 'page' && page.description) {%>
                <%- page.description %>
            <% } %>
        </h5>
    </div>

    <%- partial('tabs-bar', {
        type: hdClass.split('-')[0]
    }) %>

    <%- partial('history-bar', {
        type: hdClass.split('-')[0]
    }) %>

</header>
<% } %>