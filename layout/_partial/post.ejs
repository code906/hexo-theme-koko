
<article id="<%= post.layout %>-<%= post.slug %>"
  class="post-article article-type-<%= post.layout %> " itemprop="blogPost">
    
    <% if(post.photos && post.photos.length != 0) { %>
        <div class="post-list-gallery" >
            <% for(var i in post.photos) {%>
                <a data-fancybox="gallery" href="<%- post.photos[i] %>">
                    <img src="<%- post.photos[i] %>" class="post-list-img" itemprop="postListImgUrl"/>
                </a>
            <% } %>
        </div>
    <% } %>
    <div class="post-card">
        <h1 class="post-card-title"><%- post.title %></h1>
        <div class="post-meta">
            <time class="post-meta-date">
                <i class="fa fa-calendar-o" aria-hidden="true"></i>
                <%- partial('post/date', {date_format: config.date_format}) %>
            </time>
            <!-- post categories -->
            <% if(post.categories && post.categories.length){ %>
                <span class="post-meta-categories">
                    <i class="fa fa-flag" aria-hidden="true"></i>
                    <%- partial('post/category',{post:post}) %>
                </span>
            <% } %>
            <!-- post tags -->
            <% if(post.tags && post.tags.length){ %>
                <span class="post-meta-tags">
                    <i class="fa fa-tag" aria-hidden="true"></i>
                    <%- partial('post/tag') %>
                </span>
            <% } %>
            <%- partial('post/word-count') %>
            <%- partial('plugins/page-visit') %>
        </div>
        <div class="post-content" id="post-content" itemprop="postContent">
            <%- post.content %>
        </div>

        <%- partial('post/copyright') %>
        <%- partial('post/reward-btn') %>

        <div class="post-footer">
            
            
            <%- partial('post/share-fab') %>
        </div>
    </div>

    <%- partial('post/nav') %>

    <%- partial('post/comment') %>
</article>
<%- partial('post/toc', { post: post}) %>
<%- partial('widget/minwidget/code') %>

