<% if(page.reward){ 
    var title = "reward";
%>
    <div class="modal">
        <div id="reward-dialog" class="modal-dialog" role="dialog">
            <div class="modal-wrap">
                <div class="modal-header">
                    <button type="button" onClick="BLOG.closeModal(this)"
                        class="close" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                    <span class="modal-title"><%- title %></span>
                </div>
                <div class="modal-body">
                    <div class="reward-content">
                        <%
                            var wechat = theme.reward.wechat;
                            var alipay = theme.reward.alipay;
                        %>
                        <div class="reward-code flex">
                            <img id="rewardCode" class="img-center" src="<%- url_for(wechat || alipay) %>" alt="打赏二维码">
                        </div>
                        <% if(!!wechat && !!alipay) { %>
                        <label class="reward-toggle">
                            <input id="rewardToggle" type="checkbox" class="reward-toggle-check"
                                data-wechat="<%- url_for(wechat) %>" data-alipay="<%- url_for(alipay) %>">
                            <div class="reward-toggle-ctrol">
                                <span class="reward-toggle-item wechat">微信</span>
                                <span class="reward-toggle-label"></span>
                                <span class="reward-toggle-item alipay">支付宝</span>
                            </div>
                        </label>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>


<% } %>


